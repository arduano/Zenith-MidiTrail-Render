<UserControl x:Class="MIDITrailRender.ValueSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MIDITrailRender"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" d:DesignWidth="800" Height="26">
    <DockPanel LastChildFill="True">
        <xctk:DecimalUpDown ValueChanged="Updown_ValueChanged" DockPanel.Dock="Right" Width="80" x:Name="updown" FormatString="F2" Value="0.2" Increment="0.1"  Maximum="1" Minimum="0" Margin="5,0,0,0" HorizontalAlignment="Left" />
        <Slider Name="slider" VerticalAlignment="Center" ValueChanged="Slider_ValueChanged"></Slider>
    </DockPanel>
</UserControl>
